// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Park {
  id       String    @id @unique
  name     String
  country  String
  coasters Coaster[]
}

model Coaster {
  id        Int       @id @default(autoincrement())
  name      String
  ridden    Boolean
  status    Int
  opened    DateTime
  closed    DateTime?
  latitude  Float
  longitude Float
  rcdb      String

  park   Park   @relation(fields: [parkId], references: [id])
  parkId String
}
